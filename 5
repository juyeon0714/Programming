#include <string>
#include <vector>

using namespace std;

string solution(string s) {
    string answer = "";
    int index=1;
    for(int i=0;i<s.size();i++,index++){
        if(s[i]==' '){
            index=0;
            answer+=" ";
        }
        else{
            index&1?answer+=toupper(s[i]):answer+=tolower(s[i]);
        }
    }
    return answer;
}
